<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mappers">

	<resultMap id="LinksOutResultMap" type="Integer">
    <result property="Integer" column="site_id" javaType="Integer"/>
  </resultMap>

	<select id="getLinksOutBySiteId" parameterType="java.lang.Integer" resultType="Integer"  resultMap="LinksOutResultMap">
		SELECT sites.site_id FROM sites INNER JOIN sites_have_links
    ON sites_have_links.id_in = sites.site_id
    WHERE sites_have_links.id_out = #{site_id};
	</select>

</mapper>
